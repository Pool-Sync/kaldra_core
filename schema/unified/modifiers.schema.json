{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "KALDRA Modifiers",
    "description": "Schema for archetype modifiers.",
    "type": "array",
    "items": {
        "type": "object",
        "required": [
            "id",
            "label",
            "category",
            "description",
            "tw_alignment"
        ],
        "properties": {
            "id": {
                "type": "string"
            },
            "label": {
                "type": "string"
            },
            "category": {
                "type": "string"
            },
            "description": {
                "type": "string"
            },
            "tw_alignment": {
                "type": "array"
            }
        }
    }
}