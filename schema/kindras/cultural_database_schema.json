{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "KindraCulturalDatabaseEntry",
    "description": "Schema for cultural database entries used by Kindra scoring (future Option C).",
    "type": "object",
    "properties": {
        "country": {
            "type": "string",
            "description": "ISO country code or region identifier (e.g., 'BR', 'US', 'JP')."
        },
        "sector": {
            "type": "string",
            "description": "Sector or domain (e.g., 'tech', 'finance', 'energy')."
        },
        "kindra_layer": {
            "type": "integer",
            "description": "Kindra layer this entry applies to (1, 2, or 3).",
            "minimum": 1,
            "maximum": 3
        },
        "vector_scores": {
            "type": "object",
            "description": "Map of Kindra vector IDs to scores in [-1.0, 1.0].",
            "additionalProperties": {
                "type": "number",
                "minimum": -1.0,
                "maximum": 1.0
            }
        },
        "metadata": {
            "type": "object",
            "description": "Optional additional metadata (source, timestamp, notes).",
            "additionalProperties": true
        }
    },
    "required": [
        "country",
        "kindra_layer",
        "vector_scores"
    ],
    "additionalProperties": false
}